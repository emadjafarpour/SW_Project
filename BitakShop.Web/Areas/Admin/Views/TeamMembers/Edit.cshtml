@model BitakShop.Core.Models.TeamMember

@{
    ViewBag.Title = "اعضای تیم";
}
<input type="hidden" id="nav_active" value="content_control">
<input type="hidden" id="nav_item_active" value="teammembers">
@{
    if (ViewBag.Message != null)
    {
        <div class="alert alert-danger">
            <strong>خطا!</strong> @ViewBag.Message
        </div>
    }
}
<div class="col-lg-12">
    <div class="card card-custom gutter-b">
        <div class="card-header">
            <h3 class="card-title">
                افزودن عضو
            </h3>
        </div>
        @using (Html.BeginForm("Edit", "TeamMembers", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.AddedDate)
            @Html.HiddenFor(model => model.Image)
            @Html.HiddenFor(model => model.InsertDate)
            @Html.HiddenFor(model => model.InsertUser)

            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "form-text text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.JobTitle, new { })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.JobTitle, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.JobTitle, "", new { @class = "form-text text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-label">تصویر</label>
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <div class="image-input image-input-outline" id="teammember-image">
                            <div class="image-input-wrapper" style="background-image: url(/Files/TeamMembersImages/@Model.Image)"></div>

                            <label class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="change" data-toggle="tooltip" title="" data-original-title="آپلود تصویر">
                                <i class="fa fa-pen icon-sm text-muted"></i>
                                <input type="file" name="TeamMemberImage" accept=".png, .jpg, .jpeg" />
                                <input type="hidden" name="teammember_image_remove" />
                            </label>

                            <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="cancel" data-toggle="tooltip" title="حذف تصویر">
                                <i class="ki ki-bold-close icon-xs text-muted"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.InstagramPage, new { })
                    <div class="col-md-5">
                    @Html.EditorFor(model => model.InstagramPage, new { htmlAttributes = new { @class = "form-control " } })
                    @Html.ValidationMessageFor(model => model.InstagramPage, "", new { @class = "form-text text-danger" })
                        </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TelegramChannel, new { })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.TelegramChannel, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.TelegramChannel, "", new { @class = "form-text text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.YoutubePage, new { })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.YoutubePage, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.YoutubePage, "", new { @class = "form-text text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TwitterPage, new { })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.TwitterPage, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.TwitterPage, "", new { @class = "form-text text-danger" })
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="@Url.Action("Index")" class="btn btn-secondary">انصراف</a>
                <input type="submit" value="ثبت" class="btn btn-primary mr-2" />
            </div>
        }
    </div>
</div>
<style>
    .image-input .image-input-wrapper {
        width: 200px;
    }
</style>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="/ckeditor/ckeditor.js"></script>
    <script src="/ckeditor/adapters/jquery.js"></script>
    <script>
        new KTImageInput('teammember-image');
    </script>
}