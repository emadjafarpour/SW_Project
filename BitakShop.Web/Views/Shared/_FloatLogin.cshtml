@using BitakShop.Web.ViewModels

@model FullAccountingViewModel


<!-- Default Modal-->
<div class="modal fade" id="modalLogin" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><i class="icon-unlock"></i> - ورود به بی تک شاپ </h4>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            @using (Html.BeginForm("Login", "Customer/Auth", FormMethod.Post, new { @class = "login-box", @style = "background-color:#e1e7ec;", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body text-right">
                    <div class="row">
                        <div class="col-md-12 text-center mb-3 hidden-sm-down">
                            <img src="~/Content/client/images/account/logo.png" width="100">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.loginViewModel.UserName)
                                @Html.TextBoxFor(m => m.loginViewModel.UserName, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.loginViewModel.Password)
                                @Html.TextBoxFor(m => m.loginViewModel.Password, new { type = "Password", @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row padding-top-1x">
                        <div class="col-sm-6">
                            <div class="">
                                <label class="custom-control custom-checkbox">
                                    <input class="custom-control-input" type="checkbox" name="chkRemember">
                                    <span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">مرا بخاطر بسپار</span>
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <a href="#" style="text-decoration:none">فراموشی کلمه عبور</a>
                        </div>
                    </div>
                    <button class="btn btn-rounded btn-success btn-sm col-md-12" type="submit">ورود به بی تک شاپ</button>
                </div>
                <div class="modal-footer">
                    <a href="/Customer/Auth/Register"><button class="btn btn-rounded btn-primary btn-sm " type="button">ثبت نام نکرده اید , همین حالا اقدام کنید</button></a>
                </div>
            }
        </div>
    </div>
</div>
